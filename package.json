{
  "name": "@getinapp/appetizer",
  "version": "1.0.4",
  "main": "dist/index.js",
  "license": "MIT",
  "author": "Get In",
  "description": "Appetizer é uma UI Kit em React que ajuda os desenvolvedores e designers do @getinapp a construir interfaces de usuário consistentes e sem esforço.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getinapp/appetizer.git"
  },
  "keywords": [
    "design",
    "react",
    "ui",
    "components",
    "library"
  ],
  "bugs": {
    "url": "https://github.com/getinapp/appetizer/issues"
  },
  "homepage": "https://github.com/getinapp/appetizer#readme",
  "scripts": {
    "build": "tsc",
    "release": "auto shipit --no-changelog --base-branch=master --email=wendelfreitasbranco@gmail.com",
    "commit": "git-cz",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "lint": "eslint src --max-warnings=0",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "jest --collectCoverageFrom=!src/**/*.stories.tsx",
    "test:coverage": "yarn test --coverage --watchAll=false",
    "test:watch": "yarn test --watchAll",
    "pre-commit-lint": "yarn typecheck && yarn lint-staged"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@storybook/addon-a11y": "^6.3.7",
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-essentials": "^6.3.7",
    "@storybook/addon-links": "^6.3.7",
    "@storybook/react": "^6.3.7",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "auto": "^10.31.0",
    "babel-loader": "^8.2.2",
    "chromatic": "^5.9.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.2",
    "jest": "^27.1.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.2"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/.jest/jest-setup.ts"
    ],
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
